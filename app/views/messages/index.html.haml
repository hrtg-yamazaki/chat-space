.flash
  .notice グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to "" do
             =fa_icon "edit"
          %li.side-header__box__menu__edit-user
            =link to "" do
             =fa_icon "cog"
     .groups
      -# 後にeachメソッドを使って編集
      =link_to "" do
        .group
          %p.group__name
          %p.group__top-message
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
        %ul.main-header__left-box__member-list
          %li.main-header__left-box__member-list__member
          %li.main-header__left-box__member-list__member
        =link_to "" do
          .main-header__edit-btn Edit
      .messages
        -# 後にeachメソッドを使って編集
        .message
          .message__upper-info
            %p.message__info__talker
            %p.message__info__date
          .message__text
          =image_tag "" 
    .form
      %form.new_message
        %input.input-box__text
          %label.input-box__image
            =fa_icon "image"
            %input.input-box__image-file
        %input.submit-btn Send


