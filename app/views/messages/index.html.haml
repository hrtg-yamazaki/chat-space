.contents

  = render 'shared/side_bar'

  .main-contents

    .main-header
      .main-header__box
        %h2.main-header__box__current-group
          = @group.name
        %ul.main-header__box__members
          Memberï¼š
          - @group.users.each do |user|
            %li.main-header__box__members__member
              = user.name
      = link_to "#" do
        .main-header__edit-btn Edit

    .messages
      = render partial: "message", collection: @messages


    .form
      = form_for [@group, @message] , html: {class: "new-post"} do |f|
        .new-post__box
          = f.text_field :body, class:"new-post__box__text", placeholder: "type a message"
          = f.label :image, class: "new-post__box__image" do
            = fa_icon "image", class: "fa-lg"
            = f.file_field :image, class: "new-post__box__image__file"
        = f.submit "Send", class: "form__submit-btn"